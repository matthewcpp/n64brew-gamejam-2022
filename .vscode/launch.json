{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug N64 Asset Pipeline",
            "program": "${workspaceFolder}/lib/framework64/scripts/PrepareGameAssets.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args":["n64"]
        },
        {
            "name": "Debug Desktop Asset Pipeline",
            "program": "${workspaceFolder}/lib/framework64/scripts/PrepareGameAssets.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args":["desktop"]
        },
        {
            "type": "by-gdb",
            "name": "CEN64 Debug ROM Windows / Mac",
            "request": "launch",
            "debuggerPath": "gdb-multiarch",
            "program": "${workspaceFolder}/build_n64/src/spooky.elf",
            "remote": {
                "enabled": true,
                "address": "host.docker.internal:8080",
                "mode": "remote",
                "execfile": "${workspaceFolder}/build_n64/src/spooky.elf"
            },
            "commandsBeforeExec": [
                "set arch mips:4300",
            ],
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "by-gdb",
            "name": "CEN64 Debug ROM Linux",
            "request": "launch",
            "debuggerPath": "gdb-multiarch",
            "program": "${workspaceFolder}/build_n64/src/spooky.elf",
            "remote": {
                "enabled": true,
                "address": "localhost:8080",
                "mode": "remote",
                "execfile": "${workspaceFolder}/build_n64/src/spooky.elf"
            },
            "commandsBeforeExec": [
                "set arch mips:4300",
            ],
            "cwd": "${workspaceRoot}",
        }
    ]
}